<% if (!user) { %>
  <div style="width:500px;height:180px;">
    <h2 style="font-size:40px;">Welcome! Please log in.</h2>
    <a href="/auth/facebook">Login with Facebook</a>
    </div>
<% } else { %>
    <h2>Hello, <%= user.name %>.</h2>
    <p>ID: <%= user.id %></p>
	<p>Name :<%= user.name %></p>
	<a href="/logout">Logout</a>
<% } %>
